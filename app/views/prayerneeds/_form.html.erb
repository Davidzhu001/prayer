<%= form_for @prayerneed, :html => { :class => "form-horizontal prayerneed" } do |f| %>

    <% if @prayerneed.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@prayerneed.errors.count, "error") %> prohibited this prayerneed from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @prayerneed.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@prayerneed[:title]) %>
  </div>
  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :content, :class => 'form-control' %>
    </div>
    <%= error_span(@prayerneed[:content]) %>
  </div>
  <div class="control-group">
    <%= f.label :answer, :class => 'control-label' %>
    <div class="checkbox">
      <%= f.check_box :answer, :class => 'checkbox' %>
    </div>
    <%= error_span(@prayerneed[:content]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            prayerneeds_path, :class => 'btn btn-default' %>

<% end %>
