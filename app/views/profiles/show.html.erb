<div class="container" style="padding-top: 120px;">
  <div class="row">
    <div class="col-md-8 col-xs-10">
      <div class="well panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 col-sm-4 text-center">
                <%= image_tag @user.gravatar_url, class: "gravie" %>
              <ul class="list-inline ratings text-center" title="Ratings">
              </ul>
            </div>
            <!--/col--> 
            <div class="col-xs-12 col-sm-8">
              <h2><%= @user.username %></h2>
              <p><strong>Email: </strong> <%=mail_to @user.email %> </p>
            </div>
            <!--/col-->          
            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-4">
              <h3><strong>Prayer Needs</strong></h3>
              <p><small></small></p>
              <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span><%= @user.prayerneeds.count %> </button>
            </div>
            <!--/col-->
            <div class="col-xs-12 col-sm-4">
              <h2><strong>     <%= @user.id %></strong></h2>
              <p><small></small></p>
              <button class="btn btn-info btn-block"><span class="fa fa-weibo"></span> MyXX </button>
            </div>
            <!--/col-->
            <div class="col-xs-12 col-sm-4">
              <h2><strong>xx</strong></h2>
              <p><small></small></p>
              <button type="button" class="btn btn-primary btn-block"><span class="fa fa-gear"></span> xxx </button>  
            </div>
            <!--/col-->
          </div>
          <!--/row-->
        </div>
        <!--/panel-body-->
      </div>
      <!--/panel-->
    </div>
    <!--/col--> 
  </div>
  <!--/row--> 
</div>
<!--/container-->