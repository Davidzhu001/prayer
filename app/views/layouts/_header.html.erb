<% if user_signed_in? %> 
	<header class="navbar navbar-fixed-top bg-green">
	    <div class="logo">
	         <h1>Logo</h1>

	    </div>
	    <div class="menu"> 
		 <div class="dropdown">
		  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
		    <% if user_signed_in? %> 
		    	Dashboard
		    <% else %>
		    	Login/Sign up
		    <% end %>
		    <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
		    <% if user_signed_in? %>
		    	<li><%= link_to "My Prayer Requests", myprayers_path('#{current_user.username}') %></li>
		   		<li><%= link_to "All Prayer Requests", prayerneeds_path %></li>
		   		<li><%= link_to "Setting", edit_user_registration_path %></li>
		   		<li><%= link_to "My Profiles", profiles_path(current_user) %></li>
		   		<li><%= link_to "Sign_out", destroy_user_session_path, :method => 'delete' %></li>
		    <% else %>
		    <% end %>
		  </ul>
		 </div>

	    </div>
	</header>		    
<% end %>